<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="For Plant"
            android:textSize="20dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView2"
            app:srcCompat="@drawable/btn_left" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:text="For Plant에서 사용할"
            android:textSize="18dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필"
            android:textColor="@color/maincolor"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="을 설정해주세요."
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="프로필 사진을 설정해주세요."
            android:textSize="16dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView18"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_marginTop="18dp"
            android:background="@android:color/transparent"
            app:civ_border_overlay="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView33" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/soldoutlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView18"
            app:layout_constraintEnd_toEndOf="@+id/imageView18"
            app:layout_constraintStart_toStartOf="@+id/imageView18"
            app:layout_constraintTop_toTopOf="@+id/imageView18">

            <ImageView
                android:id="@+id/soldoutback"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:alpha="0.6"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.526"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.444"
                app:srcCompat="@drawable/background_circle" />

            <ImageView
                android:id="@+id/soldout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_image" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/nametextView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="이름을 설정해주세요."
            android:textSize="16dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/textView33"
            app:layout_constraintTop_toBottomOf="@+id/imageView18" />

        <TextView
            android:id="@+id/nameIdedittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center|start"
            android:paddingLeft="12dp"
            android:text="홍지현"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:background="@drawable/green_rectangle2"
            app:layout_constraintStart_toStartOf="@+id/nametextView34"
            app:layout_constraintTop_toBottomOf="@+id/nametextView34" />

        <TextView
            android:id="@+id/nametextView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="7dp"
            android:text="10글자 이내로 입력해주세요."
            android:textSize="12dp"
            android:textColor="@color/deepgray"
            app:layout_constraintStart_toStartOf="@+id/nameIdedittext"
            app:layout_constraintTop_toBottomOf="@+id/nameIdedittext" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="닉네임을 설정해주세요."
            android:textSize="16dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/textView33"
            app:layout_constraintTop_toBottomOf="@+id/nametextView36" />

        <EditText
            android:id="@+id/Idedittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center|start"
            android:paddingLeft="12dp"
            android:hint="닉네임 입력"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:background="@drawable/green_rectangle2"
            app:layout_constraintStart_toStartOf="@+id/textView34"
            app:layout_constraintTop_toBottomOf="@+id/textView34" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="7dp"
            android:text="10글자 이내로 입력해주세요."
            android:textSize="12dp"
            android:textColor="@color/deepgray"
            app:layout_constraintStart_toStartOf="@+id/Idedittext"
            app:layout_constraintTop_toBottomOf="@+id/Idedittext" />

        <TextView
            android:id="@+id/textView37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="아이디를 설정해주세요."
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@+id/textView33"
            app:layout_constraintTop_toBottomOf="@+id/textView36" />

        <TextView
            android:id="@+id/Idedittext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center|start"
            android:paddingLeft="12dp"
            android:text="aster03"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:background="@drawable/green_rectangle2"
            app:layout_constraintStart_toStartOf="@+id/textView37"
            app:layout_constraintTop_toBottomOf="@+id/textView37" />

        <TextView
            android:id="@+id/textView38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="7dp"
            android:text="10글자 이내로 입력해주세요."
            android:textSize="12dp"
            android:textColor="@color/deepgray"
            app:layout_constraintStart_toStartOf="@+id/Idedittext2"
            app:layout_constraintTop_toBottomOf="@+id/Idedittext2" />

        <TextView
            android:id="@+id/textView39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="비밀번호를 설정해주세요."
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@+id/textView33"
            app:layout_constraintTop_toBottomOf="@+id/textView38" />

        <EditText
            android:id="@+id/Idedittext3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center|start"
            android:inputType="textPassword"
            android:paddingLeft="12dp"
            android:hint="비밀번호 입력"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:background="@drawable/green_rectangle2"
            app:layout_constraintStart_toStartOf="@+id/textView39"
            app:layout_constraintTop_toBottomOf="@+id/textView39" />

        <TextView
            android:id="@+id/textView40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="7dp"
            android:text="8자리 이상의 영어, 숫자, 특수기호(.!@#$%^)를 만들어주세요."
            android:textSize="12dp"
            android:textColor="@color/deepgray"
            app:layout_constraintStart_toStartOf="@+id/Idedittext3"
            app:layout_constraintTop_toBottomOf="@+id/Idedittext3" />

        <TextView
            android:id="@+id/textView404"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="7dp"
            android:text="비밀번호 조건이 일치하지 않아요"
            android:textSize="12dp"
            android:textColor="@color/error"
            app:layout_constraintStart_toStartOf="@+id/Idedittext3"
            app:layout_constraintTop_toBottomOf="@+id/Idedittext3" />

        <EditText
            android:id="@+id/Idedittext4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:background="@drawable/green_rectangle2"
            android:gravity="center|start"
            android:hint="비밀번호 확인"
            android:inputType="textPassword"
            android:paddingLeft="12dp"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="@+id/Idedittext3"
            app:layout_constraintTop_toBottomOf="@+id/Idedittext3" />

        <TextView
            android:id="@+id/passwordright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="7dp"
            android:text="비밀번호가 일치합니다."
            android:textSize="12dp"
            android:textColor="@color/deepgray"
            app:layout_constraintStart_toStartOf="@+id/Idedittext4"
            app:layout_constraintTop_toBottomOf="@+id/Idedittext4"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/passworwrong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="7dp"
            android:text="비밀번호가 일치하지 않습니다."
            android:textSize="12dp"
            android:textColor="@color/error"
            app:layout_constraintStart_toStartOf="@+id/Idedittext4"
            app:layout_constraintTop_toBottomOf="@+id/Idedittext4" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="13dp"
            app:layout_constraintBottom_toBottomOf="@+id/Idedittext3"
            app:layout_constraintEnd_toEndOf="@+id/Idedittext3"
            app:layout_constraintTop_toTopOf="@+id/Idedittext3"
            app:srcCompat="@drawable/eye_off" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="13dp"
            app:layout_constraintBottom_toBottomOf="@+id/Idedittext4"
            app:layout_constraintEnd_toEndOf="@+id/Idedittext4"
            app:layout_constraintTop_toTopOf="@+id/Idedittext4"
            app:srcCompat="@drawable/eye_off" />


        <android.widget.Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/green_rectangle56"
            android:text="프로필 설정 완료"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passworwrong" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>