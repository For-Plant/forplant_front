<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".camera_result">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#00000000"
            app:srcCompat="@drawable/findtest_back" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="-41dp"
            android:text="식물 이름"
            android:textAlignment="center"
            android:textColor="@color/test_title"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/camera_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="'식물이름'으로 보여요!"
        android:layout_marginTop="32dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/camera_name_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textAlignment="center"
        android:text="'식물이름'에 대해 아래에서 살펴봅시다." />

    <ImageView
        android:id="@+id/camera_plant_img"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/findtest_result_img_back"
        app:srcCompat="@drawable/findtest_plant" />

    <TextView
        android:id="@+id/textView69"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginBottom="11dp"
        android:text="키우는 방법" />

    <TextView
        android:id="@+id/camera_grow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textAlignment="center"
        android:text="어쩌고" />

    <TextView
        android:id="@+id/textView71"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="11dp"
        android:textSize="16sp"
        android:textAlignment="center"
        android:text="주로 자라는 환경" />

    <TextView
        android:id="@+id/camera_plant_ex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textAlignment="center"
        android:text="저쩌구" />

    <TextView
        android:id="@+id/textView73"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="11dp"
        android:textSize="16sp"
        android:textAlignment="center"
        android:text="키울 때 있으면 좋을 물품들" />

    <TextView
        android:id="@+id/camera_thing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textAlignment="center"
        android:text="식물 영양 주사기" />


</LinearLayout>