<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="For Plant"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:srcCompat="@drawable/btn_left" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="39dp"
        android:text="ID 찾기"
        android:textSize="12dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="90dp"
        android:text="PW 재발급"
        android:textSize="12dp"
        android:textColor="@color/maincolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/Idedittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:background="@drawable/green_rectangle2"
        android:gravity="center|start"
        android:hint="아이디 입력"
        android:paddingLeft="12dp"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView41"/>

    <TextView
        android:id="@+id/textView45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="6dp"
        android:text="* 필수"
        android:textColor="@color/error"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/Idedittext"
        app:layout_constraintStart_toStartOf="@+id/Idedittext" />

    <TextView
        android:id="@+id/textView46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="7dp"
        android:text="(휴대폰 잘못 입력시) 올바른 휴대폰 번호를 입력해주세요."
        android:textColor="@color/deepgray"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/Idedittext2"
        app:layout_constraintTop_toBottomOf="@+id/Idedittext2" />

    <EditText
        android:id="@+id/Idedittext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:background="@drawable/green_rectangle2"
        android:gravity="center|start"
        android:hint="휴대폰 번호 입력"
        android:paddingLeft="12dp"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Idedittext" />

    <TextView
        android:id="@+id/textView47"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="6dp"
        android:text="* 필수"
        android:textColor="@color/error"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/Idedittext2"
        app:layout_constraintStart_toStartOf="@+id/Idedittext2" />

    <EditText
        android:id="@+id/Idedittext3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:background="@drawable/green_rectangle2"
        android:gravity="center|start"
        android:hint="닉네임 입력"
        android:paddingLeft="12dp"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView46" />

    <TextView
        android:id="@+id/nameeddit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="6dp"
        android:text="* 필수"
        android:textColor="@color/error"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/Idedittext3"
        app:layout_constraintStart_toStartOf="@+id/Idedittext3" />

    <android.widget.Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/gray_rectangle"
        android:text="비밀번호 재설정"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/notshowing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Idedittext3">

        <EditText
            android:id="@+id/Idedittext4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/green_rectangle2"
            android:gravity="center|start"
            android:hint="비밀번호 입력"
            android:paddingLeft="12dp"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordfind" />

        <TextView
            android:id="@+id/passwordfind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="* 필수"
            android:textColor="@color/error"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="@+id/Idedittext4"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="5dp"
            android:text="8자리 이상의 영어, 숫자, 특수기호(.!@#$%^)를 만들어주세요."
            android:textColor="@color/deepgray"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="@+id/Idedittext4"
            app:layout_constraintTop_toBottomOf="@+id/Idedittext4" />

        <EditText
            android:id="@+id/Idedittext5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/green_rectangle2"
            android:gravity="center|start"
            android:hint="비밀번호 확인"
            android:paddingLeft="12dp"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordfind2" />

        <TextView
            android:id="@+id/passwordfind2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="18dp"
            android:text="* 필수"
            android:textColor="@color/error"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="@+id/Idedittext5"
            app:layout_constraintTop_toBottomOf="@+id/textView60" />

        <TextView
            android:id="@+id/textView61"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="5dp"
            android:text="비밀번호가 일치합니다."
            android:textColor="@color/deepgray"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="@+id/Idedittext5"
            app:layout_constraintTop_toBottomOf="@+id/Idedittext5" />
        <TextView
            android:id="@+id/textView62"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="5dp"
            android:text="비밀번호가 일치하지 않습니다."
            android:textColor="@color/error"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="@+id/Idedittext5"
            app:layout_constraintTop_toBottomOf="@+id/Idedittext5" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/Idedittext4"
            app:layout_constraintEnd_toEndOf="@+id/Idedittext4"
            app:layout_constraintTop_toTopOf="@+id/Idedittext4"
            app:srcCompat="@drawable/eye_off" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/Idedittext5"
            app:layout_constraintEnd_toEndOf="@+id/Idedittext4"
            app:layout_constraintTop_toTopOf="@+id/Idedittext5"
            app:srcCompat="@drawable/eye_off" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>