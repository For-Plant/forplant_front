<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".camera_result">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#00000000"
            app:srcCompat="@drawable/findtest_back" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="-41dp"
            android:text="식물 이름"
            android:textAlignment="center"
            android:textColor="@color/test_title"
            android:textSize="20sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/camera_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="20dp"
                android:text="'식물이름'으로 보여요!"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/camera_name_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="'식물이름'에 대해 아래에서 살펴봅시다."
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/camera_plant_img"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="31dp"
                android:layout_marginBottom="31dp"
                android:background="@drawable/findtest_result_img_back"
                app:srcCompat="@drawable/findtest_plant" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginBottom="14dp"
                android:text="식물 특성"
                android:textColor="@color/highlight"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/findtest_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:text="어쩌구저쩌구"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="14dp"
                android:text="주로 자라는 환경"
                android:textColor="@color/highlight"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/findtest_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:text="어쩌구저쩌구"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="14dp"
                android:text="키우는 방법"
                android:textColor="@color/highlight"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/findtest_grow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:text="어쩌구저쩌구"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="14dp"
                android:text="TMI"
                android:textColor="@color/highlight"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/findtest_tmi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:text="어쩌구저쩌구"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <android.widget.Button
                android:id="@+id/findtest_again_btn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="43dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/test_btn"
                android:text="식물 추가하기 +"
                android:textColor="@color/test_txt" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>