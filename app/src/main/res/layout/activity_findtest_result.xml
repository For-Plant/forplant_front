<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".findtest_result">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/imageButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#00000000"
            app:srcCompat="@drawable/findtest_back" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="-41dp"
            android:text="나의 소울메이트 식물 찾기"
            android:textAlignment="center"
            android:textColor="@color/test_title"
            android:textSize="20sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/findtest_result_img"
                android:layout_width="308dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="22dp"
                android:background="@drawable/findtest_result_img_back"
                app:srcCompat="@drawable/findtest_plant" />

            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="14dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/findtest_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="식물 이름"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginRight="5dp"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/findtest_result_name_img" />
    </LinearLayout>

    <TextView
        android:id="@+id/findtest_ex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="~~~~~한 당신에게 딱 맞을 것 같아요!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/findtest_name_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="'식물 이름'에 대해 아래에서 살펴봅시다."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="15dp"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/imageView31"
        android:layout_width="match_parent"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/findtest_line" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="식물 특성"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="32dp"
        android:textColor="@color/highlight"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/findtest_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="어쩌구저쩌구"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주로 자라는 환경"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="32dp"
        android:textColor="@color/highlight"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/findtest_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="어쩌구저쩌구"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="키우는 방법"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="32dp"
        android:textColor="@color/highlight"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/findtest_grow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="어쩌구저쩌구"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TMI"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="32dp"
        android:textColor="@color/highlight"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/findtest_tmi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="어쩌구저쩌구"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <android.widget.Button
        android:id="@+id/findtest_again_btn"
        android:layout_width="match_parent"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:textColor="@color/test_txt"
        android:background="@drawable/test_btn"
        android:layout_marginTop="43dp"
        android:text="다시 찾아보기"
        android:layout_marginBottom="12dp"/>

        </LinearLayout>
    </ScrollView>



</LinearLayout>