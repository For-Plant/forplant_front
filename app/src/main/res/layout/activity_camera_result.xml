<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".camera_result">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#00000000"
            app:srcCompat="@drawable/findtest_back" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="-41dp"
            android:text="식물 이름"
            android:textAlignment="center"
            android:textColor="@color/test_title"
            android:textSize="20sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/camera_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="20dp"
                android:text="'로즈마리'으로 보여요!"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/camera_name_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="'로즈마리'에 대해 아래에서 살펴봅시다."
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/camera_plant_img"
                android:scaleType="fitCenter"
                android:layout_width="240dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="31dp"
                android:layout_marginBottom="31dp"
                android:background="@drawable/findtest_result_img_back"
                app:srcCompat="@drawable/rosemary" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginBottom="14dp"
                android:text="식물 특성"
                android:textColor="@color/highlight"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/findtest_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:text="상록성 허브로, 향이 강하고 바늘 모양의 잎을 가진 식물이에요. \n요리와 약초로 많이 사용되며, 관상용으로도 인기가 있어요."
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="14dp"
                android:text="주로 자라는 환경"
                android:textColor="@color/highlight"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/findtest_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:text="지중해성 기후에서 잘 자라며, 햇빛을 많이 받는 장소를 좋아해요.\n비교적 건조한 환경을 선호하며, 통풍이 잘되는 곳이 좋아요."
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="14dp"
                android:text="키우는 방법"
                android:textColor="@color/highlight"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/findtest_grow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:text="배수가 잘되는 흙을 사용하고, 물은 흙이 마르면 주는 것이 좋아요.\n햇빛을 충분히 받게 하고, 겨울에는 실내에서 보호해주는 것이 좋아요."
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="14dp"
                android:text="TMI"
                android:textColor="@color/highlight"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/findtest_tmi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:text="로즈마리는 요리에 많이 사용되며, 특히 고기 요리와 잘 어울려요. \n또한 로즈마리 오일은 피부와 머리카락 건강에 좋은 효능이 있어요."
                android:textColor="@color/black"
                android:textSize="14sp" />

            <android.widget.Button
                android:id="@+id/findtest_again_btn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="43dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/test_btn"
                android:text="식물 추가하기 +"
                android:textColor="@color/test_txt" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>