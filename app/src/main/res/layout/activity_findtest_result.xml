<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".findtest_result">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#00000000"
            app:srcCompat="@drawable/findtest_back" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="-41dp"
            android:text="나의 소울메이트 식물 찾기"
            android:textAlignment="center"
            android:textColor="@color/test_title"
            android:textSize="20sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@drawable/findtest_result_img_back"
        app:srcCompat="@drawable/findtest_plant" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="6dp"
        android:text="식물 이름" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="~~~~~한 당신에게 딱 맞을 것 같아요!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="'식물 이름'에 대해 아래에서 살펴봅시다."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginBottom="34dp"
        android:layout_marginTop="15dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="키우는 방법"
        android:layout_marginBottom="11dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="어쩌구저쩌구"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="키울 때 있으면 좋을 물건"
        android:textAlignment="center"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="11dp"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="식물 영양 주사기"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"/>


</LinearLayout>