<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btmst_addplant_btn"
        android:layout_width="324dp"
        android:layout_height="56dp"
        android:text="식물 추가하기"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:paddingVertical="16dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/border_highlight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btmst_setrep_btn"
        android:layout_width="324dp"
        android:layout_height="56dp"
        android:text="대표 식물 지정하기"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:paddingVertical="16dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/border_highlight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btmst_addplant_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btmst_deleteplant_btn"
        android:layout_width="324dp"
        android:layout_height="56dp"
        android:text="식물 삭제하기"
        android:textSize="16dp"
        android:textColor="@color/error"
        android:paddingVertical="16dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/border_highlight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btmst_setrep_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btmst_deathplant_btn"
        android:layout_width="324dp"
        android:layout_height="56dp"
        android:text="식물 부고처리하기"
        android:textSize="16dp"
        android:textColor="@color/error"
        android:paddingVertical="16dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/border_highlight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btmst_deleteplant_btn"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>